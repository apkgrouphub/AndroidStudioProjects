<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/editext_log_color_set">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_note_black"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sunday|22/3/2017|10:03 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_item_date"
        android:textSize="14sp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_item_remark"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/text_item_date"
        android:layout_alignStart="@+id/text_item_date" />
</RelativeLayout>